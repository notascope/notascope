{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/movies.csv"
  },
  "mark": "line",
  "encoding": {
    "x": {
      "field": "Major Genre",
      "type": "nominal"
    },
    "y": {
      "field": "Production Budget",
      "aggregate": "average",
      "type": "quantitative"
    },
    "color": {
      "field": "MPAA Rating",
      "type": "nominal"
    }
  }
}
