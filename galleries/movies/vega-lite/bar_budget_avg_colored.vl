{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/movies.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Major Genre"
    },
    "y": {
      "aggregate": "mean",
      "field": "Production Budget"
    },
    "color": {
      "field": "MPAA Rating"
    },
    "xOffset": {
      "field": "MPAA Rating"
    }
  }
}
